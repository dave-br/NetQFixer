{
  "manifest_version": 2,

  "name": "Netflix DVD Queue Fixer",
  "description": "Color-codes DVD Queue based on streamability and existence in MyList",
  "version": "1.0",
  "icons": { "19": "icon.png" },
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Fix Netflix DVD Queue"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://*.netflix.com/*",
    "https://*.netflix.com/*",
	"http://www.allflicks.net/*",
	"https://www.allflicks.net/*",
	"http://www.flixlist.co/*",
	"https://www.flixlist.co/*",
	"http://instantwatcher.com/*",
	"https://instantwatcher.com/*"
  ]
}
